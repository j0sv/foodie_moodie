<h1>Order items:</h1>

<% @order.shopping_cart_items.each do |order_item| %>
    <div id="<%= "order_row_#{order_item.item.id}" %>">
      <div><%= order_item.item.name %></div>
      <div><%= order_item.price %></div>
      <div><%= order_item.quantity %></div>

    </div>
<% end %>

<div>Total price: <%= @order.total%></div>

<input type="submit" id="Buy" value="Buy"></input>
